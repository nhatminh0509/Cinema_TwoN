@model TwonCinema.Areas.Admin.Models.Category_Equipment

@{
    ViewData["Title"] = "Sửa Trang Thiết Bị";
}
@{
    Random random = new Random();
    int rand = random.Next(1000);
}

<center>
    <h1>Sửa Trang Thiết Bị</h1>
</center>
<hr />
<div class="row">
    <div class="col-md">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label class="control-label">Tên:</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="ful" name="ful" />
                <label class="custom-file-label" for="ful">Choose image</label>
            </div>
            <div class="form-group">
                <img id="imgPre" src="~/Uploads/Category_Equipment/@Model.Image?@rand" alt="no image" class="img-thumbnail" style="max-width:300px" />
            </div>
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="ful_selected" name="ful_selected" />
                <label class="custom-file-label" for="ful_selected">Choose image selected</label>
            </div>
            <div class="form-group">
                <img id="imgPre_selected" src="~/Uploads/Category_Equipment/@Model.Image_Selected?@rand" alt="no image" class="img-thumbnail" style="max-width:300px" />
            </div>
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="ful_checked" name="ful_checked" />
                <label class="custom-file-label" for="ful_checked">Choose image checked</label>
            </div>
            <div class="form-group">
                <img id="imgPre_checked" src="~/Uploads/Category_Equipment/@Model.Image_Checked?@rand" alt="no image" class="img-thumbnail" style="max-width:300px" />
            </div>
            <div class="form-group">
                <label class="control-label">Số Chổ:</label>
                <input asp-for="Count_Cell" class="form-control" />
                <span asp-validation-for="Count_Cell" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Giá:</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Loại Trang Thiết Bị:</label>
                <select asp-for="Level" class="form-control">
                    <option value="1">Kinh Doanh</option>
                    <option value="2">Không Kinh Doanh</option>
                </select>
                <span asp-validation-for="Level" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Trạng Thái:</label>
                <select asp-for="Status" class="form-control">
                    <option value="1">Kích Hoạt</option>
                    <option value="0">Không Kích Hoạt</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sửa" class="btn btn-outline-success text-success btn-block" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-success text-success btn-block">Trở Về</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function readURL(input, idImg) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $(idImg).attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]); // convert to base64 string
            }
        }

        $("#ful").change(function () {
            readURL(this, '#imgPre');
        });

        $("#ful_selected").change(function () {
            readURL(this, '#imgPre_selected');
        });

        $("#ful_checked").change(function () {
            readURL(this, '#imgPre_checked');
        });

    </script>
}
