@model TwonCinema.Areas.Admin.Models.Staf

@{
    ViewData["Title"] = "Xóa NV";
}

<center>
    <h1>Xóa Nhân Viên</h1>
</center>
<h3>Bạn có chắc muốn xóa nhân viên này?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tên:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Email:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            Avatar:
        </dt>
        <dd class = "col-sm-10">
            <img src="~/Uploads/Staf/@Model.Avatar" style="width:200px;" />
        </dd>
        <dt class = "col-sm-2">
            Số Điện Thoại:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class = "col-sm-2">
            Địa Chỉ:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-2">
            Trạng Thái:
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Status == 1)
            { 
                <p>Kích Hoạt</p>
            }
            else
            {
                <p>Không Kích Hoạt</p>
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Xóa" class="btn btn-outline-danger text-danger btn-block" /> <br/>
        <a asp-action="Index" class="btn btn-outline-success text-success btn-block">Trở Về</a>
    </form>
</div>
