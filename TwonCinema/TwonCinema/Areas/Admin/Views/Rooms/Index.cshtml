@model IEnumerable<TwonCinema.Areas.Admin.Models.Room>

@{
    ViewData["Title"] = "Danh Sách Phòng";
}

<center>
    <h1>Danh Sách Phòng</h1>
</center>
<p>
    <a asp-action="Create" class="btn btn-success text-white btn-block">Thêm Mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Tên
            </th>
            <th>
                Sức Chứa
            </th>
            <th>
                Rạp:
            </th>
            <th>
                Trạng Thái
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name) (@item.Length x @item.Width)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cinema.Name)
            </td>
            <td>
                @if (item.Status == 1)
                {
                    <a asp-action="UnActive" asp-route-id="@item.ID"><label class="fa fa-unlock-alt"></label></a>
                }
                else if (item.Status == 0)
                {
                    <a asp-action="Active" asp-route-id="@item.ID"><label class="fa fa-lock"></label></a>
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID"><label class="fa fa-edit"></label> Sửa</a> |
                <a asp-action="Details" asp-route-id="@item.ID"><label class="fa fa-info-circle"></label> Chi Tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.ID"><label class="fa fa-trash"></label> Xóa</a>
            </td>
        </tr>
        }
    </tbody>
</table>
