@model TwonCinema.Areas.Admin.Models.Cinema

@{
    ViewData["Title"] = "Chi Tiết Rạp";
}

<center>
    <h1>Chi Tiết Rạp</h1>
</center>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Địa Chỉ:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            Đường Dây Nóng:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hotline)
        </dd>
        <dt class="col-sm-2">
            Nhân Viên Quản Lí:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Staf.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Status == 1)
            {
                <p>Kích Hoạt</p>
            }
            else
            {
                <p>Không Kích Hoạt</p>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-outline-warning text-warning btn-block">Sửa</a> <br />
    <a asp-action="Index" class="btn btn-outline-success text-success btn-block">Trở Về</a>
</div>
