@model TwonCinema.Areas.Admin.Models.Cinema

@{
    ViewData["Title"] = "Xóa Rạp";
}

<center>
    <h1>Xóa Rạp</h1>
</center>
<h3>Bạn có chắc muốn xóa rạp này?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Địa Chỉ:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            Đường Dây Nóng:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hotline)
        </dd>
        <dt class="col-sm-2">
            Nhân Viên Quản Lí:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Staf.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Status == 1)
            {
                <p>Kích Hoạt</p>
            }
            else
            {
                <p>Không Kích Hoạt</p>
            }
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Xóa" class="btn btn-outline-danger text-danger btn-block" /> <br />
        <a asp-action="Index" class="btn btn-outline-success text-success btn-block">Trở Về</a>
    </form>
</div>
